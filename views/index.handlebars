<h1>Burgers</h1>

<h2>Not Devoured</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}

      {{!-- {{> cats/cat-block sleep=true}} --}}
      <li>
        {{burger_name}}

        <button class="create-update-form" data-id="{{id}}">
            DEVOUR IT!
        </button>
    </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{!-- {{> cats/cat-block sleep=false}} --}}
      <li>
        {{burger_name}}          
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Enter a burger you wan to Eat</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
